---
import "../styles/globals.css"; // Added import for global styles
import {GlobalProviders} from "@/components/GlobalProviders";

// You can define props that your layout component will accept.
interface Props {
  title: string;
  description?: string; // Made description optional
}
const {title, description = "Astro site description"} = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- ThemeScript and other head scripts can be injected here if needed -->
    <slot name="head" />
    <!-- Google Fonts and preconnects -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap"
      rel="stylesheet"
    />
    <meta name="darkreader-lock" />
  </head>
  <body>
    <GlobalProviders client:only="react">
      <slot />
    </GlobalProviders>
  </body>
</html>
